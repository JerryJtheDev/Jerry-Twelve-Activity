<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LearnPageActivity7">

    <LinearLayout
        android:id="@+id/linelayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="255dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:src="@drawable/ic_arrow_left" />

        <ImageButton
            android:id="@+id/backButton1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:foregroundGravity="right"
            android:src="@drawable/ic_arrow_right"
            tools:layout_editor_absoluteX="520dp"
            tools:layout_editor_absoluteY="26dp" />
    </LinearLayout>


        <!-- Container with rounded top corners -->
        <LinearLayout
            android:id="@+id/bottomContainer"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:background="#F3CC6C"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_marginTop="0dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:elevation="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">



            <TextView
                android:id="@+id/welcomeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bem - Vindo!"
                android:textColor="#5C4B3A"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/welcomeSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dê o play na nostalgia, Faça login ou cadastre-se!"
                android:textColor="#7D6B56"
                android:textSize="14sp"
                android:layout_marginBottom="24dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonLogin"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="12dp"
                    android:backgroundTint="#D9A862"
                    android:text="Login"
                    android:textColor="#5C4B3A"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonRegister"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:backgroundTint="#FFF9E5"
                    android:text="Sign up"
                    android:textAllCaps="false"
                    android:textColor="#5C4B3A" />

            </LinearLayout>
        </LinearLayout>

        <!-- Logo container -->
        <LinearLayout
            android:id="@+id/logoContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottomContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="100dp">



            <TextView
                android:id="@+id/logoPart1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T"
                android:textSize="40sp"
                android:textColor="#C2915D"
                android:textStyle="bold"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/logoPart2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="#D9A862"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/logoO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="#8B754A"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/logoPart3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ca"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="#C2915D"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <TextView
            android:id="@+id/logoMusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="music"
            android:textColor="#8B754A"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/logoContainer"
            app:layout_constraintStart_toStartOf="@id/logoContainer"
            app:layout_constraintEnd_toEndOf="@id/logoContainer"/>





