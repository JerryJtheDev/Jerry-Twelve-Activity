<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LearnPageActivity5">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C6E3D9"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="6dp"
            android:background="@android:color/white"
            android:backgroundTint="#FFFFFF"
            android:backgroundTintMode="src_over"
            android:clipToOutline="true"
            android:clipToPadding="false"
            android:elevation="4dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp">

            <LinearLayout
                android:id="@+id/linelayout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="255dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Back"
                    android:src="@drawable/ic_arrow_left" />

                <ImageButton
                    android:id="@+id/backButton1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Back"
                    android:foregroundGravity="right"
                    android:src="@drawable/ic_arrow_right"
                    tools:layout_editor_absoluteX="520dp"
                    tools:layout_editor_absoluteY="26dp" />
            </LinearLayout>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="start"
                android:layout_marginBottom="11dp"
                android:background="#34A853"
                android:backgroundTint="@color/white"
                android:backgroundTintMode="src_over"
                android:clipToOutline="true"
                android:contentDescription="Green square background with white shopping bag icon"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/generated_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center"
                android:text="Hey there!\nWelcome Back"
                android:textColor="#1B254B"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Email"
                android:textColor="#1B254B"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/border_green_rounded"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <!--                <ImageView-->
                <!--                    android:layout_width="20dp"-->
                <!--                    android:layout_height="20dp"-->
                <!--                    android:tint="#34A853"-->
                <!--                    android:src="@drawable/ic_email"-->
                <!--                    android:contentDescription="Email icon"-->
                <!--                    android:layout_marginEnd="8dp"/>-->

                <EditText
                    android:id="@+id/emailEditText"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/montserrat_semibold"
                    android:hint="Enter your email"
                    android:inputType="textEmailAddress"
                    android:text="Joobie@gmail.com"
                    android:textColor="#34A853"
                    android:textSize="12sp" />

                <!--                <ImageView-->
                <!--                    android:layout_width="20dp"-->
                <!--                    android:layout_height="20dp"-->
                <!--                    android:tint="#34A853"-->
                <!--                    android:src="@drawable/ic_check"-->
                <!--                    android:contentDescription="Check icon"/>-->
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Password"
                android:textColor="#1B254B"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/border_green_rounded"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <!--                <ImageView-->
                <!--                    android:layout_width="20dp"-->
                <!--                    android:layout_height="20dp"-->
                <!--                    android:tint="#34A853"-->
                <!--                    android:src="@drawable/ic_lock"-->
                <!--                    android:contentDescription="Lock icon"-->
                <!--                    android:layout_marginEnd="8dp"/>-->

                <EditText
                    android:id="@+id/passwordEditText"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/montserrat_semibold"
                    android:hint="Enter your password"
                    android:inputType="textPassword"
                    android:textColor="#34A853"
                    android:textSize="12sp" />

                <!--                <ImageView-->
                <!--                    android:layout_width="20dp"-->
                <!--                    android:layout_height="20dp"-->
                <!--                    android:tint="#34A853"-->
                <!--                    android:src="@drawable/ic_eye_slash"-->
                <!--                    android:contentDescription="Eye slash icon"/>-->
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="end"
                android:text="Forgot Password?"
                android:textColor="#34A853"
                android:textSize="12sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="24dp"
                android:backgroundTint="#34A853"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Log In"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Don't have an account? "
                    android:textColor="#1B254B"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Sign up"
                    android:textColor="#34A853"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="0dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageButton
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="24dp"
                    android:background="@color/black"
                    android:backgroundTint="#34A853"
                    android:clipToOutline="true"
                    android:contentDescription="Google login button"
                    android:elevation="4dp"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/google_logo" />

                <ImageButton
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@android:color/white"
                    android:backgroundTint="#34A853"
                    android:clipToOutline="true"
                    android:contentDescription="Facebook login button"
                    android:elevation="4dp"
                    android:padding="8dp"
                    android:scaleType="centerInside"

                    android:src="@drawable/facebook_logo" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>