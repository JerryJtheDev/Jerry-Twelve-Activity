<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LearnPageActivity3">




    <RelativeLayout
        android:id="@+id/rlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/linelayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="255dp"
                android:layout_marginBottom="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"
                android:src="@drawable/ic_arrow_left" />

            <ImageButton
                android:id="@+id/backButton1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"
                android:foregroundGravity="right"
                android:src="@drawable/ic_arrow_right"
                tools:layout_editor_absoluteX="520dp"
                tools:layout_editor_absoluteY="26dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linelayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:text="Learning App"
            android:textColor="@color/design_default_color_primary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/illustration"
            android:layout_width="wrap_content"
            android:layout_height="260dp"
            android:layout_below="@id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:contentDescription="Illustration"
            android:src="@drawable/generated_image1" />

        <TextView
            android:id="@+id/select_course_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/illustration"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Select your course level"
            android:textColor="#1F1F28"
            android:textSize="18sp" />

        <RadioGroup
            android:id="@+id/course_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/select_course_level"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/beginner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beginner"
                android:textColor="#1F1F28" />

            <RadioButton
                android:id="@+id/intermediate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intermediate"
                android:textColor="#1F1F28" />

            <RadioButton
                android:id="@+id/expert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expert"
                android:textColor="#1F1F28" />
        </RadioGroup>

        <CheckBox
            android:id="@+id/confirmation_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/course_level"
            android:layout_marginTop="16dp"
            android:text="Are you sure?"
            android:textColor="#1F1F28" />

        <Button
            android:id="@+id/continue_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/confirmation_checkbox"
            android:layout_marginTop="16dp"
            android:backgroundTint="#673AB7"
            android:text="Continue"
            android:textColor="#FFFFFF" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>