<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormActivity3">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F9F9F9">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:padding="16dp">

            <!-- Header -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:background="@android:color/transparent"
                android:contentDescription="Back"
                android:src="@drawable/ic_arrow_left" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Filters"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvClearAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Clear All"
                android:textColor="#D84315"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Location -->
            <TextView
                android:id="@+id/tvLocationLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTitle"
                android:layout_marginTop="32dp"
                android:text="Filters"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etLocation"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/tvLocationLabel"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_input"
                android:drawablePadding="8dp"
                android:hint="Select location"
                android:paddingStart="12dp"
                android:textSize="14sp" />

            <!-- Pet Type -->
            <TextView
                android:id="@+id/tvPetTypeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etLocation"
                android:layout_marginTop="24dp"
                android:text="Pet Type"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSeeMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tvPetTypeLabel"
                android:layout_alignParentEnd="true"
                android:text="See More"
                android:textColor="#D84315"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/layoutPetType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvPetTypeLabel"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnDog"
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_selected"
                    android:text="Dog"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnCat"
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_unselected"
                    android:text="Cat"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnChick"
                    android:layout_width="90dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_unselected"
                    android:text="Chick"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Breed -->
            <TextView
                android:id="@+id/tvBreedLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layoutPetType"
                android:layout_marginTop="24dp"
                android:text="Breed"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerBreed"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/tvBreedLabel"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_input"
                android:paddingStart="12dp"
                android:spinnerMode="dropdown" />

            <!-- Sex -->
            <TextView
                android:id="@+id/tvSexLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinnerBreed"
                android:layout_marginTop="24dp"
                android:text="Sex"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/layoutSex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvSexLabel"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnMale"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_unselected"
                    android:text="Male"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnFemale"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_selected"
                    android:text="Female"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Size -->
            <TextView
                android:id="@+id/tvSizeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layoutSex"
                android:layout_marginTop="24dp"
                android:text="Size"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/layoutSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvSizeLabel"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSmall"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_selected"
                    android:text="Small"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnMedium"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_unselected"
                    android:text="Medium"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnLarge"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_unselected"
                    android:text="Large"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Age -->
            <TextView
                android:id="@+id/tvAgeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layoutSize"
                android:layout_marginTop="24dp"
                android:text="Age"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/layoutAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvAgeLabel"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnYoung"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_unselected"
                    android:text="Young"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnAdult"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_selected"
                    android:text="Adult"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnSenior"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_unselected"
                    android:text="Senior"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Submit -->
            <Button
                android:id="@+id/btnViewMatches"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/layoutAge"
                android:layout_marginTop="32dp"
                android:background="@drawable/bg_selected"
                android:text="View Matches"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>